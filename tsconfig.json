{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@locales": ["./locales"],
      "@typings*": ["typings*", "typings"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}